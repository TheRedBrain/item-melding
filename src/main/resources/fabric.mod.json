{
	"schemaVersion": 1,
	"id": "mergeditems",
	"version": "${version}",
	"name": "Merged Items",
	"description": "Adds a way to merge two or more items. Their attribute modifiers will add up.",
	"authors": [
		"TheRedBrain"
	],
	"contact": {
		"sources": "https://github.com/TheRedBrain/minecrawl"
	},
	"license": "MIT",
	"icon": "assets/mergeditems/icon.png",
	"environment": "*",
	"entrypoints": {
		"main": [
			"com.github.theredbrain.mergeditems.MergedItems"
		],
		"client": [
			"com.github.theredbrain.mergeditems.MergedItemsClient"
		]
	},
	"mixins": [
		"mergeditems.mixins.json",
		{
			"config": "mergeditems.client.mixins.json",
			"environment": "client"
		}
	],
	"depends": {
		"fabricloader": ">=0.16.7",
		"minecraft": "~1.21.3",
		"java": ">=21",
		"fabric-api": "*"
	},
	"suggests": {
		"another-mod": "*"
	}
}